{
  "appId": "com.partiri.FS",
  "productName": "FS",
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "legalTrademarks":"Copyright 2020-2021 Partiri.cloud - Jo√£o Machacaz",
    "target": [{
      "target": "nsis",
      "arch": [
        "x64", "ia32"
      ]
    }]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  },
  "nsis": {
    "oneClick":false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "perMachine":true,
    "createDesktopShortcut":true,
    "artifactName": "PartiriFS_${arch}.${ext}"
  }
}
